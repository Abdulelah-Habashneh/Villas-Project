@model List<Amenity>


<div class="card-header bg-success bg-gradient ml-0 py-0">

    <div class="row">

        <div class="col-12 text-center">
            <h2 class="text-white py-2"> Amenity List</h2>
        </div>
    </div>

</div>


<div class="card-body border p-4">


    <div class="row pb-3">
        <div class=" col-6 offset-6 text-end">
            <a asp-action="Create" asp-controller="Amenity" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i>     Create New Amenity
            </a>
        </div>
    </div>

    <table class="table table-bordered table-sthiped">
        <thead>

            <tr>
                <th>Amenity Id</th>
                <th>Villa Name</th> 
                <th>Amenity Name</th>
                <th> Descreption</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>



                    <td>@item.Id</td>
                    <td>@item.Villa.Name</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>


                    <td>
                        <div class="w-75 btn-group  ">
                            <a asp-action="Update" asp-controller="Amenity" asp-route-id="@item.Id" style="margin-right:10px" class="btn btn-success mx-2">

                                <i class="bi bi-pencil-square"></i> Edit

                            </a>
                            <a asp-action="Delete" asp-controller="Amenity" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-person-x-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>




