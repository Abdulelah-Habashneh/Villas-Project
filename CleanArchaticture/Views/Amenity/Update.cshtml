@model Amenity
@* @model VillaNumberVM  *@
<div class="card-header bg-success bg-gradient ml-0 py-0">

    <div class="row">

        <div class="col-12 text-center">
            <h2 class="text-white py-2"> Update Villa Number</h2>
        </div>
    </div>

</div>

<div class="card-body border p-4">
    <form method="post">
        <div class="p-3">

            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-floating py-1 col-12">
                <select asp-for=" VillaId" asp-items="@ViewBag.Villalist" class="form-select border shadow">
                    <option disabled selected> --select option--</option>
                </select>
                @* <input type="text" asp-for="VillaId" id="VillaId" class="form-control border box-shadow" /> *@
                <label asp-for="VillaId" class="ms-2"></label>
                <span asp-validation-for="VillaId" class="text-danger"></span>

            </div>
            <div class="form-floating py-1 col-12">
                <input type="number" asp-for="Id" readonly id="Id" class="form-control border box-shadow" />
                <label asp-for="Id" class="ms-2"></label>
                <span asp-validation-for="Id" class="text-danger"></span>

            </div>
            <div class="form-floating py-1 col-12">
                <input type="text" asp-for="Name" id="SpecialDetails" class="form-control border box-shadow" />
                <label asp-for="Name" class="ms-2"></label>
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-floating py-1 col-12">
                <input type="text" asp-for="Description" id="descreption" class="form-control border box-shadow" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="row pt-2">
                <div class="col-2 col-md-3">
                    <button type="submit" class="btn btn-success w-100" style="margin:10px auto ">
                        <i class="bi bi-plus-circle"> Update</i>
                    </button>
                </div>

                <div class="col-6   col-md-3">
                    <a asp-action="Index" asp-controller="VillaNumber" class="btn btn-secondary w-100" style="margin-top:10px">
                        <i class="bi bi-x-circle" style="margin-right:10px"></i>Cancel
                    </a>
                </div>
            </div>


        </div>
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }


}
