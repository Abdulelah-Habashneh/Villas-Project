 @model List<VillaNumbers>


    <div class="card-header bg-success bg-gradient ml-0 py-0">

        <div class="row">

            <div class="col-12 text-center">
            <h2 class="text-white py-2"> VillaNumber List</h2>
            </div>
        </div>

    </div>


<div class="card-body border p-4">


    <div class="row pb-3">
        <div class=" col-6 offset-6 text-end">
            <a asp-action="Create" asp-controller="VillaNumber" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i>     Create New Villa Number
            </a>
        </div>
    </div>

    <table class="table table-bordered table-sthiped">
        <thead>

            <tr>
                <th>Villa Name</th>
                <th>Villa Number</th>
                <th>Special Details</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>


                    
                    <td>@item.villa.Name</td>
                    <td>@item.VillaNumber</td>
                    <td>@item.SpecialDetails</td>
                   
                    <td>
                        <div class="w-75 btn-group  ">
                            <a asp-action="Update" asp-controller="VillaNumber" asp-route-id="@item.VillaNumber" style="margin-right:10px" class="btn btn-success mx-2">
                               
                                <i class="bi bi-pencil-square"></i> Edit
                                                                    
                            </a>
                            <a asp-action="Delete" asp-controller="VillaNumber" asp-route-id="@item.VillaNumber" class="btn btn-danger mx-2">
                                <i class="bi bi-person-x-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>




