@model List<CleanArchaticture.Domain.Model.Villa>

    <div class="card-header bg-success bg-gradient ml-0 py-0">

        <div class="row">

            <div class="col-12 text-center">
            <h2 class="text-white py-2"> Villa List</h2>
            </div>
        </div>

    </div>


<div class="card-body border p-4">


    <div class="row pb-3">
        <div class=" col-6 offset-6 text-end">
            <a  asp-action="Create" asp-controller="Villa" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i>     Create New Villa
            </a>
        </div>
    </div>

    <table class="table table-bordered table-sthiped">
        <thead>

            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Sqft</th>
                <th>Occupancy</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>


                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Sqft</td>
                    <td>@item.Occupancy</td>
                    <td>
                        <div class="w-75 btn-group  ">
                            <a asp-action="Update" asp-controller="Villa" asp-route-Id="@item.Id" style="margin-right:10px" class="btn btn-success mx-2">
                               
                                <i class="bi bi-pencil-square"></i> Edit
                                                                    
                            </a>
                            <a asp-action="Delete" asp-controller="Villa" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-person-x-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>




